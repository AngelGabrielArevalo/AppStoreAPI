{
  "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strictPropertyInitialization": true,  
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist/src",
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  },
  "include": ["./src"]
}
